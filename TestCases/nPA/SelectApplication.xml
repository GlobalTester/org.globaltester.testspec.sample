<?xml version="1.0" encoding="UTF-8"?>
<TestCase id="nPA_SelectApplication" xmlns="http://globaltester.org/testspecification" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://globaltester.org/schema/testspecification.xsd">
	<Title>Select eID Applictaion on nPA</Title>
	<Version>1.00</Version>
	<Purpose>Select ePassport application</Purpose>
	<Profile></Profile>
	<Reference></Reference>
	<Precondition></Precondition>
	<TestStep>
		<Command xsi:type="APDUCommand">
			<Text>Reset card</Text>
		</Command>
		<Description>Perform a cold reset of the card in order to ensure all temporary data is removed.</Description>
		<TechnicalCommand>
			print("Reseting chip");
			atr = card.reset(Card.RESET_COLD);
			print (atr);
		</TechnicalCommand>
		<ExpectedResult xsi:type="APDUResult">
			<Text>ATR</Text>
		</ExpectedResult>
	</TestStep>
	<TestStep>
		<Command xsi:type="APDUCommand">
			<Text>Select eID application</Text>
		</Command>
		<Description>Select the eID application with a plain SelectApplication APDU</Description>
		<TechnicalCommand>
			command = new ByteString("00 A4 04 0C 09 E8 07 04 00 7F 00 07 03 02", HEX);
			response = card.gt_sendCommand(command);
		</TechnicalCommand>
		<ExpectedResult xsi:type="APDUResult">
			<Text>SW 9000</Text>
			<TechnicalResult>
				assertStatusWord(new Array("6982"), card.SW.toString(HEX), FAILURE); 
				assertMatchValue("", response, FAILURE);
			</TechnicalResult>
		</ExpectedResult>
	</TestStep>
</TestCase>